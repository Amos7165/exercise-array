

#include <stdio.h>
#include <stdlib.h>

struct Student {
    char name[50];
    int marks;
};

int main() {
    int n;
    struct Student *students;
    FILE *file;

    // Ask for the number of students
    printf("Enter the number of students: ");
    scanf("%d", &n);

    //  students array
    students = (struct Student*) malloc(n * sizeof(struct Student));
    if (students == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }

    // Read student data
    for (int i = 0; i < n; i++) {
        printf("Enter name of student %d: ", i + 1);
        scanf("%s", students[i].name);
        printf("Enter marks of student %d: ", i + 1);
        scanf("%d", &students[i].marks);
    }

    // Write the student data to a binary file
    file = fopen("students.bin", "wb");
    if (file == NULL) {
        printf("Error opening file!\n");
        free(students);
        return 1;
    }
    fwrite(students, sizeof(struct Student), n, file);
    fclose(file);
    printf("Data successfully written to students.bin\n");

    // Read the data back from the file
    file = fopen("students.bin", "rb");
    if (file == NULL) {
        printf("Error opening file!\n");
        free(students);
        return 1;
    }
    fread(students, sizeof(struct Student), n, file);
    fclose(file);

    // Display the student data
    printf("\nStudent Data from File:\n");
    for (int i = 0; i < n; i++) {
        printf("Name: %s, Marks: %d\n", students[i].name, students[i].marks);
    }

    //  allocated memory
    free(students);

    return 0;
}

